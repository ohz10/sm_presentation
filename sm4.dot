# Tennis Kata: 4-state state machine
# generate: circo -Tpng -o sm4.png sm4.dot

digraph Game {
    node [shape="circle"];

    S [label="",width=0.01]
    R [label="Regular\nScoring"];
    D [label="Duece"];
    A [label="Advantage"];
    G [label="Game\nOver";shape="doublecircle"];

    S -> R
    R -> G [label="point"];
    R -> R [label="point"];
    R -> D [label="point"];
    D -> A [label="point"];
    A -> D [label="counter point"];
    A -> G [label="point"];
}
